<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoverde"
    tools:context=".ListDataCourse">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title_datac"
        style="@style/TextTitles"
        android:text="@string/txt_title_datac"
    />


    <TextView
        android:id="@+id/txt_courses_dc"
        style="@style/TextviewStyle"
        android:layout_gravity="start"
        android:text="@string/txt_courses_acs" />

    <Spinner
        style="@style/ListStyles"
        android:id="@+id/spn_courses_dc"/>

    <TextView
        android:id="@+id/txt_data_of_course"
        style="@style/TextviewStyle"
        android:layout_gravity="start"
        android:text="@string/txt_data_of_course" />

</LinearLayout>